<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_vertical"

    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="0dp"

    app:cardElevation="2dp"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="true"
    android:animateLayoutChanges="false">
    <!--android:animateLayoutChanges="true"-->

    <RelativeLayout
        android:id="@+id/list_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--android:background="@drawable/round_layout_mask"-->

        <ImageButton
            android:id="@+id/detailIcon"
            android:contentDescription="@string/blank"
            android:src="@drawable/ic_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingTop="10dp"
            android:padding="10dp"
            android:tint="@color/app_body_text_2"
            android:layout_alignTop="@+id/expandButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceListItem"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="-2dp"
            android:layout_marginStart="-2dp"
            android:textColor="@color/primaryText"

            android:layout_toRightOf="@+id/detailIcon"
            android:layout_toEndOf="@+id/detailIcon"
            android:layout_toLeftOf="@+id/expandButton"
            android:layout_toStartOf="@+id/expandButton"/>

        <ImageButton
            android:id="@+id/expandButton"
            android:contentDescription="@string/expand"
            android:src="@drawable/ic_expand_filled"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="10dp"
            android:clickable="true"
            android:tint="@color/app_body_text_2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/detail_extra_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:animateLayoutChanges="false">

    </FrameLayout>
</android.support.v7.widget.CardView>