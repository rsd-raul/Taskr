<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearCreation"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin_left"
        android:paddingStart="@dimen/activity_horizontal_margin_left"
        android:paddingRight="@dimen/activity_horizontal_margin_right"
        android:paddingEnd="@dimen/activity_horizontal_margin_right"
        android:paddingTop="0dp"
        android:paddingBottom="8dp" >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textImput1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText style="@style/editText"
                android:id="@+id/task"
                android:hint="@string/title"
                android:textSize="30sp"

                android:focusable="false">
                <!--android:focusable="true">-->

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/checkbox_favourite"
            android:button="@drawable/custom_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_gravity="end"
            android:layout_below="@+id/textImput1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_alignBottom="@+id/button_time" />

        <ImageButton
            android:id="@+id/button_time"
            android:src="@drawable/ic_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_gravity="end"
            android:layout_below="@+id/textImput1"
            android:layout_toLeftOf="@+id/checkbox_favourite"
            android:layout_toStartOf="@+id/checkbox_favourite" />

        <ImageButton
            android:id="@+id/button_location"
            android:src="@drawable/ic_place_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_gravity="end"
            android:layout_below="@+id/textImput1"
            android:layout_toLeftOf="@+id/button_time"
            android:layout_toStartOf="@+id/button_time" />

        <ImageButton
            android:id="@+id/button_label"
            android:src="@drawable/ic_label_multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_gravity="end"
            android:layout_below="@+id/textImput1"
            android:layout_toLeftOf="@+id/button_location"
            android:layout_toStartOf="@+id/button_location" />

        <ImageButton
            android:id="@+id/button_description"
            android:src="@drawable/ic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_gravity="end"
            android:layout_below="@+id/textImput1"
            android:layout_toLeftOf="@+id/button_label"
            android:layout_toStartOf="@+id/button_label" />



