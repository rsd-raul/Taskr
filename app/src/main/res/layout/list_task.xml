<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_layout_mask"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceListItem"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="-2dp"
            android:layout_marginStart="-2dp"
            android:textColor="@color/primaryText"/>

        <ImageButton
            android:id="@+id/button_time"
            android:contentDescription="@string/alarm"
            android:src="@drawable/ic_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" />

        <CheckBox
            android:id="@+id/checkbox_favourite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/custom_favourite" />

    </LinearLayout>

</LinearLayout>