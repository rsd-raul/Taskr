<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/appearance" >

        <CheckBoxPreference
            android:key="adaptColor"
            android:title="@string/adaptableColors"
            android:summaryOff="@string/adaptableColorsOff"
            android:summaryOn="@string/adaptableColorsOn"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/notifications" >

        <CheckBoxPreference
            android:key="notificationTone"
            android:title="@string/notificationSound"
            android:summaryOff="@string/notificationSoundOff"
            android:summaryOn="@string/notificationSoundOn"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="notificationVibration"
            android:title="@string/notificationVibration"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="notificationLed"
            android:title="@string/notificationLed"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/account" >

        <ListPreference
            android:key="syncMode"
            android:title="@string/syncMode"
            android:summary="@string/syncModeSummary"
            android:dialogTitle="@string/select"
            android:entries="@array/syncValues"
            android:entryValues="@array/syncValues"
            android:defaultValue="At app start" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/predictions" >
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/sharing" >
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/customization" >

        <ListPreference
            android:key="firstDay"
            android:title="@string/firstDay"
            android:dialogTitle="@string/select"
            android:entries="@array/mondayOrSunday"
            android:entryValues="@array/mondayOrSunday"
            android:defaultValue="Monday" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/security" >
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/planner" >
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/author" >
    </PreferenceCategory>

    <CheckBoxPreference
        android:key="10"
        android:defaultValue="true"
        android:height="0dp"/>
</PreferenceScreen>